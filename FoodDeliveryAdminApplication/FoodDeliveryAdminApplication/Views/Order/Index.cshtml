@{
}

@model List<FoodDeliveryAdminApplication.Models.Order>

<div class="mb-4">
    <h1>All Orders</h1>
</div>

<div class="container">

    <a asp-action="ExportAllOrders" class="btn btn-outline-success mb-4">Export All Orders</a>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Customer Details</th>
                <th scope="col">Total Price</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@item.Owner.UserName</td>
                    <td>@item.totalPrice MKD</td>
                    <td> <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">View Order</a></td>
                    <td> <a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-outline-success">Create Invoice</a></td>
                    <td><form asp-action="DeleteOrder" asp-controller="Order" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>

            }

        </tbody>

    </table>

</div>
